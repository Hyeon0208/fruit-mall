<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fruit.mall.user.UserMapper">
    <insert id="insertUser" parameterType="com.fruit.mall.user.dto.User" useGeneratedKeys="true" keyProperty="user_id_no">
        INSERT INTO user (USER_EMAIL, USER_NAME, USER_PWD, USER_STATUS)
        VALUES (#{user_email}, #{user_name}, #{user_pwd}, #{user_status})
    </insert>

    <insert id="insertTerm" parameterType="com.fruit.mall.user.dto.Term">
        INSERT INTO term (USER_ID_NO, TERM_NAME, TERM_FLAG)
        VALUES (#{user_id_no}, #{term_name}, #{term_flag})
    </insert>

    <resultMap id="UserResultMap" type="com.fruit.mall.user.dto.User">
        <result property="user_email" column="user_email" />
        <result property="user_name" column="user_name" />
        <result property="user_pwd" column="user_pwd" />
        <result property="user_status" column="user_status" typeHandler="com.fruit.mall.user.RoleTypeHandler" />
    </resultMap>

    <select id="selectOnlyUserIdNo" parameterType="String" resultType="Long">
        SELECT USER_ID_NO FROM user WHERE USER_EMAIL = #{user_email}
    </select>

    <select id="selectUserByUserEmail" parameterType="String" resultMap="UserResultMap">
        SELECT * FROM user WHERE USER_EMAIL = #{user_email}
    </select>

    <select id="selectEmailByUserEmail" parameterType="String" resultType="String">
        SELECT USER_EMAIL FROM user WHERE USER_EMAIL = #{user_email}
    </select>

    <select id="selectUserNameByUserName" parameterType="String" resultType="String">
        SELECT USER_NAME FROM user WHERE USER_NAME = #{user_name}
    </select>
</mapper>
