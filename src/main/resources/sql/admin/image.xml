<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fruit.mall.admin.image.ImageMapper">
    <insert id="insertImage" parameterType="com.fruit.mall.admin.image.Image" keyProperty="imageId">
    INSERT INTO image (
                       PRODUCT_ID,
                       IMAGE_URL,
                       IMAGE_PATH,
                       IMAGE_FILENAME
                       )
                VALUES (
                        #{productId},
                        #{imageUrl},
                        #{path},
                        #{fileName}
                        )
    </insert>

    <select id="selectAllById" parameterType="Long" resultType="com.fruit.mall.admin.image.Image">
        SELECT * FROM image WHERE IMAGE_ID = #{imageId}
    </select>
</mapper>
